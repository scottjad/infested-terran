style "checkbutton" {
	engine "pixmap" {
		image {
			function = CHECK
			recolorable = TRUE
			state = NORMAL
			shadow = OUT
			overlay_file = "assets/checkbox-unchecked.svg"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = PRELIGHT
			shadow = OUT
			overlay_file = "assets/checkbox-unchecked.svg"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = ACTIVE
