		}

		image {
			function = CHECK
			recolorable = TRUE
			state = NORMAL
			shadow = IN
			overlay_file = "assets/checkbox-checked.svg"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
